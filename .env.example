# FlowPlayground Environment Configuration
# Copy this file to .env and update the values

# Application Settings
APP_NAME=FlowPlayground
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here-generate-a-strong-one

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Security
API_KEY_HEADER=X-API-Key
CORS_ORIGINS=*

# File Upload Settings
MAX_FILE_SIZE=52428800  # 50MB in bytes
UPLOAD_DIR=uploads

# External API Configuration
FAL_AI_API_KEY=your-fal-ai-api-key-here
FAL_AI_BASE_URL=https://fal.run/fal-ai
FAL_AI_TIMEOUT=300

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_EXPIRE_TIME=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Gradio Configuration
GRADIO_ENABLED=true
GRADIO_PORT=7860
# GRADIO_AUTH=username:password  # Optional authentication

# Database (if using SQL database in future)
# DATABASE_URL=postgresql://user:password@localhost/flowplayground

# Monitoring and Metrics
# PROMETHEUS_METRICS_PORT=9090
# SENTRY_DSN=your-sentry-dsn-here

# Production Settings (override for production)
# DEBUG=false
# RELOAD=false
# LOG_LEVEL=WARNING
# CORS_ORIGINS=https://yourapp.com,https://www.yourapp.com

# AWS/Cloud Storage (if using cloud storage)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET=your-bucket-name

# Webhook Configuration
# WEBHOOK_SECRET=your-webhook-secret

# Background Tasks
# CELERY_BROKER_URL=redis://localhost:6379/1
# CELERY_RESULT_BACKEND=redis://localhost:6379/1